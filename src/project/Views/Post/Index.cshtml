@model IEnumerable<Post>

@{
    ViewData["Title"] = "Feed";
}

@*<a asp-action="Create" class="btn btn-outline-primary btn-create-post" role="button">Create New</a>*@

<div class="row cld-bg-light">

    <a class="create-post" href="#"><img class="create-post-image" src="~/img/clipboard2-plus.svg" alt="clipboard"/></a>

    @foreach (var post in Model)
    {
        <div class="row">
            <div class="card post cld-btn-primary">
                <div class="card-body text-center">
                    <div class="row">
                        <h3 class="card-title post-title">@post.PostTitle</h3>
                    </div>
                    <div class="row">
                        <div class="col">
                            <h6 class="card-subtitle mb-2 post-username">@@@post.User.Username</h6>
                        </div>
                        <div class="col">
                            <h6 class="card-subtitle mb-2 post-date">@post.DatePosted.ToString("MM/dd/yy")</h6>
                        </div>
                    </div>
                    <div class="row">
                        <p class="card-text post-text">@post.PostDescription</p>
                    </div>
                </div>
            </div>
        </div>
    }

</div>