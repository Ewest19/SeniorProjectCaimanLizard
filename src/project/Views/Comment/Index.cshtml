@model WatchParty.ViewModels.CommentVM

@{
    ViewData["Title"] = "Comments";
}

<div class="row cld-bg-light">
    <div class="row text-center mb-5">
        <h1>Comments</h1>
    </div>
    @if (Model.Comments.Any())
    {
        foreach (var comment in Model.Comments)
        {
            <div class="card comment cld-btn-primary">
                <div class="card-body text-center">
                    <div class="row mt-3">
                        <div class="col-2">
                            <a class="post-username-link" href="/user/@comment.User.Username"><h6 class="card-subtitle comment-username">@@@comment.User.Username</h6></a>
                        </div>
                        <div class="row mt-3">
                            <p class="card-text all-comments-text mb-2">@comment.CommentTitle</p>
                        </div>
                        <div class="row mt-3">
                            <h6 class="card-subtitle all-comments-date">@Model.Convert.ConvertDate(comment.DatePosted, DateTime.Now)</h6>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="row">
            <p>No comments</p>
        </div>
    }
    <form asp-controller="Comment" asp-action="Index" method="post">
        <div asp-validation-summary="All"></div>
        <div class="row enter-comment-section">
            <div class="col-2">
                <label>Enter your comment:</label>
            </div>
            <div class="col-3">
                <textarea id="comment-entered" placeholder="Enter comment" rows="10" cols="70" name="commentString"></textarea>
            </div>
            <div class="col-2">
                <input class="btn" id="comment-submit" type="submit" value="SUBMIT" />
                <input type="hidden" name="userId" value="@Model.UserId"/>
            </div>
        </div>
    </form>
</div>